{
  "cli": {
    "version": ">= 16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "android": {
        "buildType": "apk",         // APK léger pour test rapide
        "gradleCommand": ":app:assembleRelease",
      },
      "ios": {
        "simulator": false
      },
      "autoIncrement": true        // incrémente la version automatiquement
    }
  },
  "submit": {
    "production": {}
  }
}
